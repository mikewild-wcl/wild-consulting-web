@model ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section id="home" class="hero-section">
    <div class="row align-items-center py-5">
        <div class="col-lg-7">
            <img class="img-fluid rounded mb-4 mb-lg-0" src="~/images/logo.jpg" alt="Header - by Markus Spiske on Unsplash">
        </div>
        <div class="col-lg-5">
            <h1 class="display-4 fw-bold mb-4">Wild Consulting Limited</h1>
            <p class="lead mb-3">
                Expert .NET software consulting based in Oxford, specializing in Azure cloud development, ASP.NET Core, and modern AI-driven solutions.
            </p>
            <p class="mb-4">
                Over 20 years of experience delivering enterprise-grade systems for government, banking, and insurance sectors.
            </p>
            <a class="btn btn-primary btn-lg" href="#contact">Get in Touch</a>
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="services-section py-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold">Our Services</h2>
        <p class="lead text-muted">Comprehensive software development expertise</p>
    </div>

    <div class="row g-4">
        <div id="dotnet-services-card" class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <img class="card-body-img mb-3" src="~/images/code-file-icon.svg" alt="Code icon" />
                    <h3 class="card-title h4">Code</h3>
                    <p class="card-text">Modern .NET development with ASP.NET Core MVC, Razor Pages, Web APIs, and minimal APIs.</p>
                    <ul class="list-unstyled small text-start mt-3">
                        <li class="mb-2">ASP.NET Core MVC &amp; Razor Pages</li>
                        <li class="mb-2">RESTful Web APIs</li>
                        <li class="mb-2">WPF Desktop Applications</li>
                    </ul>
                    <a class="icon-attribution" href="https://dryicons.com/free-icons/coding">Icon by Dryicons</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div id="data-services-card" class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <picture>
                        <source srcset="~/images/database_search.webp" type="image/webp">
                        <source srcset="~/images/database_search.png" type="image/png">
                        <img class="card-body-img mb-3" src="~/images/database_search.png" alt="Database icon" />
                    </picture>
                    <h3 class="card-title h4">Data</h3>
                    <p class="card-text">Expert database design and data analysis with modern tools and frameworks.</p>
                    <ul class="list-unstyled small text-start mt-3">
                        <li class="mb-2">SQL Server &amp; Cosmos DB</li>
                        <li class="mb-2">Entity Framework Core &amp; Dapper</li>
                        <li class="mb-2">R &amp; Python for analytics</li>
                    </ul>
                    <a class="icon-attribution" href="https://dryicons.com/free-graphics/data-analytics?page=3">Icon by Dryicons</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div id="cloud-services-card" class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <img class="card-body-img mb-3" src="~/images/cloud-computing.svg" alt="Cloud icon" />
                    <h3 class="card-title h4">Cloud</h3>
                    <p class="card-text">Azure cloud expertise with Functions, ServiceBus, Storage, and CI/CD pipelines.</p>
                    <ul class="list-unstyled small text-start mt-3">
                        <li class="mb-2">Azure App Services &amp; Functions</li>
                        <li class="mb-2">Azure DevOps YAML Pipelines</li>
                        <li class="mb-2">Bicep &amp; ARM Templates</li>
                    </ul>
                    <a class="icon-attribution" href="https://dryicons.com/free-graphics/data-analytics">Icon by Dryicons</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div id="ai-services-card" class="card h-100 shadow-sm border-primary">
                <div class="card-body text-center">
                    <div class="card-body-img mb-3 d-flex align-items-center justify-content-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="96" height="96" fill="currentColor" class="bi bi-robot text-primary" viewBox="0 0 16 16">
                            <path d="M6 12.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5M3 8.062C3 6.76 4.235 5.765 5.53 5.886a26.6 26.6 0 0 0 4.94 0C11.765 5.765 13 6.76 13 8.062v1.157a.93.93 0 0 1-.765.935c-.845.147-2.34.346-4.235.346s-3.39-.2-4.235-.346A.93.93 0 0 1 3 9.219zm4.542-.827a.25.25 0 0 0-.217.068l-.92.9a25 25 0 0 1-1.871-.183.25.25 0 0 0-.068.495c.55.076 1.232.149 2.02.193a.25.25 0 0 0 .189-.071l.754-.736.847 1.71a.25.25 0 0 0 .404.062l.932-.97a25 25 0 0 0 1.922-.188.25.25 0 0 0-.068-.495c-.538.074-1.207.145-1.98.189a.25.25 0 0 0-.166.076l-.754.785-.842-1.7a.25.25 0 0 0-.182-.135"/>
                            <path d="M8.5 1.866a1 1 0 1 0-1 0V3h-2A4.5 4.5 0 0 0 1 7.5V8a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1v1a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-1a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1v-.5A4.5 4.5 0 0 0 10.5 3h-2zM14 7.5V13a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V7.5A3.5 3.5 0 0 1 5.5 4h5A3.5 3.5 0 0 1 14 7.5"/>
                        </svg>
                    </div>
                    <h3 class="card-title h4">AI &amp; ML&nbsp;<span class="badge bg-primary">New</span></h3>
                    <p class="card-text">Generative AI development with Microsoft Semantic Kernel and Agent Framework.</p>
                    <ul class="list-unstyled small text-start mt-3">
                        <li class="mb-2">Azure OpenAI Integration</li>
                        <li class="mb-2">RAG &amp; Graph RAG with Neo4j</li>
                        <li class="mb-2">AI-driven Development Tools</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about-section py-5 bg-light">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h2 class="display-5 fw-bold mb-4 text-center">About Wild Consulting</h2>
            <p class="lead">
                Wild Consulting Limited has been offering expert software development services since 2008, specializing in .NET development, SQL Server, cloud deployment, and modern AI solutions.
            </p>
            <p>
                <strong>Mike Wild</strong>, Director of Wild Consulting, brings over 20 years of professional experience in Microsoft .NET C# development. Originally from New Zealand, Mike worked extensively in Taiwan before settling in the UK over a decade ago, now based in Oxford serving clients across the South and Midlands.
            </p>
            <p>
                Mike has delivered enterprise-grade systems across multiple sectors including government, banking, insurance, and publishing. Recent projects include leading development teams on the Defra Extended Producer Responsibility (EPR) scheme, which raised over £1.4B in fees in October 2025, and building complex systems for the Education &amp; Skills Funding Agency.
            </p>
            <p>
                Recognised for technical excellence and team leadership, Mike has extensive experience with Government Digital Service (GDS) agile delivery standards and has led teams in the UK, New Zealand, Taiwan, and Saudi Arabia. He is fluent in Mandarin Chinese.
            </p>
            <p>
                Mike is dedicated to continuous learning, actively building skills in generative AI with Microsoft Agent Framework and Semantic Kernel, modern development with GitHub Copilot and Claude Code, and local-first projects with .NET Aspire. He is also developing expertise in R and Python for data analysis.
            </p>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section id="skills" class="skills-section py-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold">Technical Expertise</h2>
        <p class="lead text-muted">Core skills and emerging technologies</p>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <h3 class="h4 mb-3">Core Skills</h3>
            <div class="row g-2">
                <div class="col-md-6">
                    <ul class="list-unstyled">
                        <li class="mb-2"><strong>.NET &amp; C#:</strong> ASP.NET Core MVC, Razor Pages, Web APIs</li>
                        <li class="mb-2"><strong>Azure:</strong> App Services, Functions, ServiceBus, Storage, Key Vault</li>
                        <li class="mb-2"><strong>Databases:</strong> SQL Server, Cosmos DB, EF Core, Dapper</li>
                        <li class="mb-2"><strong>CI/CD:</strong> Azure DevOps, YAML pipelines, Bicep, ARM</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul class="list-unstyled">
                        <li class="mb-2"><strong>Web:</strong> HTML, JavaScript, jQuery, CSS, Bootstrap</li>
                        <li class="mb-2"><strong>Resilience:</strong> Polly, Microsoft Resilience</li>
                        <li class="mb-2"><strong>Testing:</strong> xUnit, Moq, NSubstitute, SpecFlow, Selenium</li>
                        <li class="mb-2"><strong>Agile:</strong> Scrum, Kanban, GDS standards</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <h3 class="h4 mb-3">Emerging Skills &amp; Interests</h3>
            <div class="row g-2">
                <div class="col-md-6">
                    <ul class="list-unstyled">
                        <li class="mb-2"><strong>AI &amp; ML:</strong> Semantic Kernel, Agent Framework, Azure OpenAI</li>
                        <li class="mb-2"><strong>RAG:</strong> Retrieval Augmented Generation, Graph RAG with Neo4j</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul class="list-unstyled">
                        <li class="mb-2"><strong>Modern Dev:</strong> Docker, .NET Aspire, GitHub Copilot, Claude Code</li>
                        <li class="mb-2"><strong>Data Science:</strong> Python, R, Microsoft Fabric, geospatial analytics</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

